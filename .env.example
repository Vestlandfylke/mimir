# ============================================
# MIMIR LOCAL DEVELOPMENT CONFIGURATION
# ============================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env
#
# Only AZURE_OPENAI_* values are REQUIRED!
# Everything else has sensible defaults for local development.

# ============================================
# REQUIRED: Azure OpenAI Configuration
# ============================================
# Get these from your Azure OpenAI resource in the Azure Portal
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-api-key-here
AZURE_OPENAI_CHAT_DEPLOYMENT=gpt-4o
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-ada-002

# ============================================
# OPTIONAL: Authentication
# ============================================
# Default: None (no authentication for local development)
# Set to AzureAd to enable Azure AD authentication
AUTH_TYPE=None

# Only needed if AUTH_TYPE=AzureAd
# AZURE_AD_TENANT_ID=your-tenant-id
# AZURE_AD_CLIENT_ID=your-client-id
# AZURE_AD_FRONTEND_CLIENT_ID=your-frontend-client-id

# ============================================
# OPTIONAL: MCP Bridge (Klarsprak tools)
# ============================================
# Enable to use MCP tools (requires MCP server running)
MCP_ENABLED=false

# Only needed if MCP_ENABLED=true
# FASTMCP_SERVER_URL=https://your-mcp-server.azurecontainerapps.io
# MCP_BRIDGE_PORT=8002

# OAuth for MCP (only if your MCP server requires authentication)
# MCP_ENTRA_TENANT_ID=
# MCP_ENTRA_CLIENT_ID=
# MCP_ENTRA_CLIENT_SECRET=

# ============================================
# OPTIONAL: Azure Speech (text-to-speech)
# ============================================
# AZURE_SPEECH_REGION=westeurope
# AZURE_SPEECH_KEY=your-speech-key

# ============================================
# OPTIONAL: Storage Configuration
# ============================================
# For local development, we use local file storage (no Azure needed)
# These are only needed for production/distributed deployments

# Azure Blob Storage (for document storage)
# AZURE_BLOBS_CONNECTION_STRING=

# Azure Queue (for distributed memory pipeline)
# AZURE_QUEUE_CONNECTION_STRING=

# Azure AI Search (for production vector search)
# AZURE_AI_SEARCH_ENDPOINT=
# AZURE_AI_SEARCH_API_KEY=

# Azure Cosmos DB (for production chat storage)
# COSMOS_CONNECTION_STRING=

# ============================================
# OPTIONAL: Application Insights
# ============================================
# APPLICATIONINSIGHTS_CONNECTION_STRING=

# ============================================
# DEVELOPMENT SETTINGS (usually don't change)
# ============================================
# Frontend URL
REACT_APP_BACKEND_URI=http://localhost:8080

# Backend ports
BACKEND_HTTP_PORT=8080
BACKEND_HTTPS_PORT=8443

# Local storage paths (relative to container)
LOCAL_STORAGE_PATH=./data
